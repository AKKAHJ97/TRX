    }

    textarea {
      width: 50%;
      height: 500px;
      background-color: #1e1e1e;
      color: #fff;
      border: none;
      resize: none;
      font-size: 16px;
      padding: 15px;
      border-radius: 10px;
      outline: none;
    }

    .preview {
      width: 50%;
      background-color: #1a1a1a;
      padding: 20px;
      border-radius: 10px;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .gui-image {
      width: 100%;
      aspect-ratio: 1 / 1;
      border-radius: 10px;
      object-fit: cover;
